<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="164dp"
        android:layout_height="157dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/kb" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="196dp"
        android:layout_height="158dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:srcCompat="@drawable/e" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="K70 RGB MK.2"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="198dp"
        tools:layout_editor_absoluteY="41dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mechanical Keyboard"
        tools:layout_editor_absoluteX="198dp"
        tools:layout_editor_absoluteY="73dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="261dp"
        android:layout_height="77dp"
        android:text="German made CHERRY MX mechanical keyswitches provide extreme reliability and accuracy with vivid dynamic multicolor RGB backlighting."
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="225dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="Cherry MX Switches"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="203dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="54dp"
        android:layout_height="66dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:srcCompat="@drawable/c" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DURABLE ALUMINUM FRAME"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="321dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:text="Built to withstand a lifetime of gaming. Lightweight and rugged durability, built to last thousands of hours of gameplay."
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="340dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="169dp"
        android:layout_height="166dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/d" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CORSAIR iCUE"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="422dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="262dp"
        android:layout_height="56dp"
        android:text="8mb Profile storage with Hardware Playback. And Programmable with Corasair iCUE Software"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="441dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="88dp"
        android:layout_height="32dp"

        android:background="@android:color/darker_gray"
        android:text="Buy Now"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="124dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="79dp"
        android:layout_height="33dp"
        android:background="?android:attr/colorControlActivated"
        android:text="Add to Cart"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="124dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="86dp"
        android:layout_height="37dp"
        android:text="Next"
        tools:layout_editor_absoluteX="261dp"
        tools:layout_editor_absoluteY="514dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="86dp"
        android:layout_height="38dp"
        android:text="Back"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="513dp" />

</android.support.constraint.ConstraintLayout>